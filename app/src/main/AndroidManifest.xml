<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiahaoliuliu.chutoro">

    <uses-permission android:name="android.permission.READ_SMS" />

    <application
        android:name=".ui.MainApplication"
        android:allowBackup="@bool/allowBackup"
        android:fullBackupOnly="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.transactionslist.TransactionsListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.addtransaction.AddTransactionActivity"
            android:label="@string/title_activity_add_transaction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.summary.SummaryActivity">
        </activity>
    </application>

</manifest>